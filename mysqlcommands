SELECT * FROM search_history;

CREATE TABLE promoted_brand(id BIGINT(20) PRIMARY KEY AUTO_INCREMENT,
  brand VARCHAR(50));
INSERT INTO promoted_brand VALUES (NULL , "Ford");
INSERT INTO promoted_brand VALUES (NULL, "KIA");


SELECT * FROM promoted_brand;

DROP TRIGGER IF EXISTS promoted_check;

DELIMITER $$
CREATE TRIGGER promoted_check BEFORE INSERT ON `search_history`
FOR EACH ROW BEGIN
  IF (NEW.car_brand IN (SELECT brand FROM promoted_brand)) THEN
    SET NEW.is_promoted = TRUE;
  ELSE
    SET NEW.is_promoted = FALSE;
  END IF;
END$$
DELIMITER ;

TRUNCATE search_history;
