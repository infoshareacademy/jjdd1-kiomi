<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="Autoparts">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <RollingFile name="GeneralErrors" fileName="logs/generalErrors.log"
                     filePattern="logs/$${date:yyyy-MM-dd}/monitoring-%i.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{1.} - %enc{%msg}%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 KB" />
            </Policies>
            <DefaultRolloverStrategy max="15" />
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="GeneralErrors"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
